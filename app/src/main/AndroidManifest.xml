<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.picodiploma.mynavigationdrawer">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.huriati.project.tvkabel.ui.SearchActivity"
            android:label="Cari Pelanggan"
            android:parentActivityName="com.huriati.project.tvkabel.MainActivity" />
        <activity
            android:name="com.huriati.project.tvkabel.ui.DetailActivity"
            android:label="Detail Tagihan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huriati.project.tvkabel.ui.BayarActivity"
            android:label="Pembayaran" />
        <activity
            android:name="com.huriati.project.tvkabel.DeviceList"
            android:label="List Device" />
        <activity
            android:name="com.huriati.project.tvkabel.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huriati.project.tvkabel.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.huriati.project.tvkabel.SplashScreeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>